@model TaskManager.ViewModels.TaskViewModel
@{
    ViewData["Title"] = "Create Task";
    var project = ViewBag.Project as TaskManager.Models.Project;
    var users = ViewBag.Users as List<TaskManager.Models.ApplicationUser>;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title mb-0">
                    <i class="fas fa-plus me-2"></i>Create New Task
                    @if (project != null)
                    {
                        <small class="text-muted">- @project.Name</small>
                    }
                </h2>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <input type="hidden" asp-for="ProjectId" />
                    
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Task Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter task title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the task..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DueDate" class="form-label">Due Date</label>
                                <input asp-for="DueDate" type="date" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Priority" class="form-label">Priority</label>
                                <select asp-for="Priority" class="form-select">
                                    <option value="@TaskPriority.Low">Low</option>
                                    <option value="@TaskPriority.Medium" selected>Medium</option>
                                    <option value="@TaskPriority.High">High</option>
                                    <option value="@TaskPriority.Critical">Critical</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="@TaskItemStatus.ToDo" selected>To Do</option>
                                    <option value="@TaskItemStatus.InProgress">In Progress</option>
                                    <option value="@TaskItemStatus.Review">Review</option>
                                    <option value="@TaskItemStatus.Done">Done</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="AssignedToId" class="form-label">Assign To</label>
                                <select asp-for="AssignedToId" class="form-select">
                                    <option value="">Unassigned</option>
                                    @if (users != null)
                                    {
                                        foreach (var user in users)
                                        {
                                            <option value="@user.Id">@user.FirstName @user.LastName (@user.Email)</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="AssignedToId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Create Task
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Set min date to today for due date
        document.addEventListener('DOMContentLoaded', function() {
            const dueDateInput = document.getElementById('DueDate');
            if (dueDateInput) {
                const today = new Date().toISOString().split('T')[0];
                dueDateInput.min = today;
            }
        });
    </script>
}