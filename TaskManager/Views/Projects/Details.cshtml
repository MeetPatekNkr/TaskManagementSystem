@model TaskManager.ViewModels.ProjectDetailViewModel
@{
    ViewData["Title"] = "Project Details";
    
    // Calculate counts safely without lambda expressions
    int adminCount = 0;
    int memberCount = 0;
    
    foreach (var member in Model.Members)
    {
        if (member.Role == "Owner" || member.Role == "Admin")
        {
            adminCount++;
        }
        else if (member.Role == "Member")
        {
            memberCount++;
        }
    }
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-project-diagram me-2"></i>@Model.Name</h1>
    <div>
        <a asp-controller="Tasks" asp-action="Create" asp-route-projectId="@Model.Id" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>New Task
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Projects
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Project Information</h5>
            </div>
            <div class="card-body">
                <p class="card-text">@Model.Description</p>
                <div class="row">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <i class="fas fa-tasks me-1"></i>
                            <strong>@Model.TaskCount</strong> tasks
                        </small>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">
                            <i class="fas fa-users me-1"></i>
                            <strong>@Model.MemberCount</strong> members
                        </small>
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                <small>Created by @Model.OwnerName on @Model.CreatedAt.ToString("MMM dd, yyyy")</small>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary">@Model.TaskCount</h3>
                        <p class="text-muted mb-0">Total Tasks</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@Model.MemberCount</h3>
                        <p class="text-muted mb-0">Team Members</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Project Actions -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Project Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2 d-md-flex">
                    <a asp-controller="Tasks" asp-action="Index" asp-route-projectId="@Model.Id" class="btn btn-primary me-md-2">
                        <i class="fas fa-tasks me-1"></i>View All Tasks
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('Are you sure you want to delete this project? This will delete all tasks and remove all members. This action cannot be undone.')">
                            <i class="fas fa-trash me-1"></i>Delete Project
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Add Member Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Add Team Member</h5>
            </div>
            <div class="card-body">
                <!-- Direct Member Addition -->
                <div class="mb-4">
                    <h6 class="text-muted mb-3">Add Existing User</h6>
                    <form id="addMemberForm">
                        <div class="mb-3">
                            <label for="userSearch" class="form-label">Search Users</label>
                            <input type="text" class="form-control" id="userSearch" placeholder="Search by name or email">
                            <div id="userSearchResults" class="mt-2" style="display: none;"></div>
                        </div>
                    </form>
                </div>

                <!-- Invite by Email -->
                <div class="border-top pt-3">
                    <h6 class="text-muted mb-3">Invite by Email</h6>
                    <form id="sendInvitationForm">
                        <div class="mb-3">
                            <label for="inviteEmail" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="inviteEmail" placeholder="Enter email to send invitation">
                            <div class="form-text">We'll send an invitation email to join this project.</div>
                        </div>
                        <button type="submit" class="btn btn-outline-primary w-100">
                            <i class="fas fa-paper-plane me-1"></i>Send Invitation
                        </button>
                    </form>
                </div>

                <div id="messageContainer" class="mt-2"></div>
            </div>
        </div>

        <!-- Team Members -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-users me-2"></i>Team Members
                </h5>
                <span class="badge bg-primary">@Model.MemberCount members</span>
            </div>
            <div class="card-body">
                @if (Model.Members.Any())
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0">Team Members List</h6>
                        <button id="exportTeamBtn" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-download me-1"></i>Export to CSV
                        </button>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover" id="teamMembersTable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model.Members)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-primary text-white me-3">
                                                    @if (!string.IsNullOrEmpty(member.UserName))
                                                    {
                                                        @member.UserName.Substring(0, 1).ToUpper()
                                                    }
                                                </div>
                                                <div>
                                                    <strong>@member.UserName</strong>
                                                    @if (member.Role == "Owner")
                                                    {
                                                        <span class="badge bg-success ms-2">Project Owner</span>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <a href="mailto:@member.Email" class="text-decoration-none">
                                                <i class="fas fa-envelope me-1"></i>@member.Email
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge 
                                                @(member.Role == "Owner" ? "bg-success" : 
                                                  member.Role == "Admin" ? "bg-warning" : "bg-info")">
                                                @member.Role
                                            </span>
                                        </td>
                                        <td>
                                            @if (member.Role != "Owner")
                                            {
                                                <div class="btn-group">
                                                    <button class="btn btn-sm btn-outline-primary send-message-btn" 
                                                            data-bs-toggle="tooltip" 
                                                            title="Send message to @member.UserName"
                                                            data-email="@member.Email">
                                                        <i class="fas fa-comment"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger remove-member" 
                                                            data-user-id="@member.UserId" 
                                                            data-user-name="@member.UserName"
                                                            data-bs-toggle="tooltip"
                                                            title="Remove from project">
                                                        <i class="fas fa-user-times"></i>
                                                    </button>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Project Owner</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Team Statistics -->
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h4 class="text-primary">@Model.MemberCount</h4>
                                    <p class="text-muted mb-0">Total Members</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h4 class="text-success">@adminCount</h4>
                                    <p class="text-muted mb-0">Admins</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h4 class="text-info">@memberCount</h4>
                                    <p class="text-muted mb-0">Members</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h5>No Team Members Yet</h5>
                        <p class="text-muted">Start by adding members to your project team.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/projectDetails.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initializeProjectDetails(@Model.Id);
        });
    </script>

    <style>
        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 16px;
        }
        .user-result-item:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }
        .user-result-item {
            border: none;
            border-bottom: 1px solid #dee2e6;
        }
        .user-result-item:last-child {
            border-bottom: none;
        }
    </style>
}