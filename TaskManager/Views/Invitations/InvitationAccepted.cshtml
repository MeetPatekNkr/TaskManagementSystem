@{
    ViewData["Title"] = "Invitation Accepted";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body py-5">
                    <i class="fas fa-check-circle text-success fa-5x mb-4"></i>
                    <h2 class="card-title">Invitation Accepted!</h2>
                    <p class="card-text">@ViewBag.SuccessMessage</p>
                    <p class="text-muted">You have been successfully added to the project.</p>
                    <div class="mt-4">
                        <a asp-controller="Projects" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-project-diagram me-2"></i>Go to Projects
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>